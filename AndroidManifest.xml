<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.activities.upgrade"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.activities.upgrade.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.activities.upgrade.LoadContent"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.activities.upgrade.AddClassActivity"
            android:label="@string/title_activity_add_class" >
        </activity>
        <activity
            android:name="com.activities.upgrade.ClassDisplay"
            android:label="@string/title_activity_class_display" >
        </activity>
        <activity
            android:name="com.activities.upgrade.LinkGradeSource"
            android:label="@string/title_activity_link_grade_source" >
        </activity>
    </application>

</manifest>
